<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <ImageView
            android:id="@+id/img_venu"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/demo_7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_toEndOf="@+id/img_venu"
            android:layout_toRightOf="@+id/img_venu"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp">

            <TextView
                android:id="@+id/txt_venu_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hard Rock hotel and Casino"
                android:textColor="@color/black50p"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txt_venu_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Catossa ,Ok"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>