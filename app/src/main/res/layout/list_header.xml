<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">
    <TextView
        android:id="@+id/txt_profile_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_165sdp"
        android:background="@drawable/half_circle_img"
        android:gravity="center"
        android:text="Santosh Sharma"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_22sdp" />

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:src="@drawable/ic_back_icon"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:scaleType="fitStart"
        android:layout_marginTop="@dimen/_10sdp" />

    <ImageView
        android:id="@+id/img_setting"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:src="@drawable/slider_icon"
        android:padding="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_10sdp" />

    <ImageView
        android:id="@+id/img_profile_pic"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_115sdp"
        android:background="@drawable/bg_blue_ring"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/image_defult_profile" />

    <LinearLayout
        android:id="@+id/lnr_event_count"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_180sdp"
        android:background="@drawable/rounded_rect_box"
        android:padding="@dimen/_3sdp">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_3sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/key" />
        <!--TODO set textview to 99+ if total event count is more then that-->
        <TextView
            android:id="@+id/txt_event_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0 events"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/lnr_event_count"
        android:background="@color/black"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_fb"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/_17sdp"
        android:layout_marginRight="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_170sdp"
        android:background="@drawable/bg_primary_circle"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/fb" />

    <TextView
        android:id="@+id/txt_f2_badge"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_160sdp"
        android:background="@drawable/bg_blue_ring"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_10sdp" />

    <ImageView
        android:id="@+id/img_capture"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_180sdp"
        android:background="@drawable/rounded_rect_box"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_2sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_photo_camera" />


</RelativeLayout>