<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardElevation="0.0dp"
        android:background="@drawable/bg_event_card">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />


            <TextView
                android:id="@+id/card_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_event_card"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_4sdp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_blue_ring"
                android:scaleType="centerInside"
                android:src="@drawable/image_defult_profile"
                android:layout_marginRight="@dimen/right_margin_event"
                android:layout_marginTop="@dimen/right_margin_event"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_user"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_8sdp"
                android:gravity="center"
                android:layout_marginRight="@dimen/right_margin_event"
                android:layout_alignLeft="@+id/img_user"
                android:layout_alignStart="@+id/img_user" />

        </RelativeLayout>



    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2.0dp"
        android:background="@drawable/app_icon" />
</LinearLayout>