<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<com.google.android.gms.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_minus50sdp"
        android:layout_marginTop="@dimen/_minus50sdp"
        android:layout_marginRight="@dimen/_minus100sdp"
        android:clickable="false" />-->

    <ImageView
        android:id="@+id/image_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_minus50sdp"
        android:layout_marginRight="@dimen/_minus100sdp"
        android:layout_marginTop="@dimen/_minus50sdp"
        android:clickable="false"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black50p" />

    <ImageView
        android:id="@+id/img_map_icon_i1"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/background_circle_white"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/map" />

    <TextView
        android:id="@+id/txt_address_i1"
        style="@style/txt_event_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@+id/img_map_icon_i1"
        android:paddingLeft="@dimen/_5sdp"
        android:text="@string/sample_Address" />

    <ImageView
        android:id="@+id/img_calender_i1"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_alignRight="@+id/img_map_icon_i1"
        android:layout_below="@+id/img_map_icon_i1"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/background_circle_white"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/icn_calender" />

    <TextView
        android:id="@+id/txt_calender_i1"
        style="@style/txt_event_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:layout_below="@+id/img_map_icon_i1"
        android:layout_toRightOf="@+id/img_calender_i1"
        android:paddingLeft="@dimen/_5sdp"
        android:text="@string/sample_date" />

    <ImageView
        android:id="@+id/img_edit_i1"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/right_margin_event"
        android:background="@drawable/background_circle_white"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/pencil_" />


</RelativeLayout>