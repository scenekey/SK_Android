<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:arc="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_f1_profile"
                android:layout_width="@dimen/top_bar_profile"
                android:layout_height="@dimen/top_bar_profile"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/bg_profile_circular"
                android:padding="@dimen/top_bar_profile_padding"
                android:src="@drawable/image_defult_profile"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="0dp" />


            <TextView
                android:id="@+id/txt_f1_title"
                style="@style/fragment_txt_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/Enter" />

            <!--<include layout="@layout/i5_points_key"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_f1_title"
                android:layout_width="wrap_content"
                />-->

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/frame_fragments_a3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/bottomBar_margin">

        </FrameLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/frm_bottmbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/linermain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_72sdp"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal"
            android:weightSum="5">

            <RelativeLayout
                android:id="@+id/rtlv_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_one"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="@dimen/_8sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_trending_icon" />


                <TextView
                    android:id="@+id/txt_eventName"
                    style="@style/txt_bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_below="@+id/img_one"
                    android:text="@string/Trending" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rtlv_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_two"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="@dimen/_8sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_map_icon" />


                <TextView
                    android:id="@+id/txt_eventAdress"
                    style="@style/txt_bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_below="@+id/img_two"
                    android:text="@string/Map" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rtlv_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_enter_withimg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/key_icon" />


                <TextView
                    android:id="@+id/txt_eventDate"
                    style="@style/txt_bottom_bar"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/transparent"
                    android:text="@string/Enter" />

            </RelativeLayout>

            <!-- <RelativeLayout
                 android:id="@+id/three"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:gravity="center_horizontal"
                 android:background="@drawable/background_1"
                 android:paddingBottom="@dimen/_2sdp"
                 android:orientation="vertical">
                 <ImageView
                     android:id="@+id/img_three"
                     android:layout_width="@dimen/_44sdp"
                     android:layout_height="@dimen/_44sdp"
                     android:scaleType="fitCenter"
                     android:layout_marginTop="@dimen/_6sdp"
                     android:layout_marginLeft="@dimen/_1sdp"
                     android:layout_marginBottom="@dimen/_2sdp"
                     android:layout_centerHorizontal="true"
                     android:src="@drawable/icon_enter"
                     />


                 <TextView
                     android:id="@+id/txt_three"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/_14sdp"
                     android:textSize="@dimen/_10sdp"
                     android:gravity="center_horizontal"
                     android:textColor="@color/white"
                     android:layout_below="@+id/img_three"
                     android:text="@string/Enter"/>

             </RelativeLayout>-->

            <RelativeLayout
                android:id="@+id/rtlv_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/img_four"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="@dimen/_8sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_search_icon" />


                <TextView
                    android:id="@+id/txt_four"
                    style="@style/txt_bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_below="@+id/img_four"
                    android:text="@string/Search" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rtlv_five"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:gravity="center_horizontal">


                <ImageView
                    android:id="@+id/img_five"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="@dimen/_8sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_add_icon" />


                <TextView
                    android:id="@+id/txt_five"
                    style="@style/txt_bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_below="@+id/img_five"
                    android:text="@string/Add" />

            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:arc="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        tools:context=".activity.HomeActivity">

        <com.scenekey.lib_sources.arc_menu.ArcMenu
            android:id="@+id/arcMenuX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            arc:menuChildAnim="false"
            arc:menuChildSize="48dp"
            arc:menuClickAnim="true"
            arc:menuGravity="Bottom_Right"
            arc:menuNormalColor="@color/colorPrimary"
            arc:menuShadowElevation="true"
            arc:menuType="normal">

        </com.scenekey.lib_sources.arc_menu.ArcMenu>

    </FrameLayout>


</RelativeLayout>