<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical"
    android:weightSum="1">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/rclv_f3_trending"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lnr_event_count">

            </ListView>

            <TextView
                android:id="@+id/txt_dimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black70p"
                android:text="f \n  f"
                android:textColor="@color/transparent"
                android:textSize="@dimen/_300sdp"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/img_cross"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/cross_primary"
                android:visibility="gone" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_profile_pic2"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_115sdp"
                android:alpha="0"
                android:src="@drawable/image_defult_profile"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="@dimen/_3sdp" />

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_175sdp"
                android:background="@drawable/bg_primary_circle"
                android:src="@drawable/ic_icon_arrow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_175sdp"
                android:background="@drawable/bg_primary_circle"
                android:rotationY="180"
                android:src="@drawable/ic_icon_arrow"
                android:visibility="gone" />



        </RelativeLayout>


</LinearLayout>