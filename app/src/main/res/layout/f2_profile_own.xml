<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp" />

            <TextView
                android:id="@+id/txt_profile_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:background="@drawable/half_circle_img"
                android:gravity="center"
                android:text="Santosh Sharma"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_22sdp" />

            <ImageView
                android:id="@+id/img_profile_pic"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_115sdp"
                android:background="@drawable/bg_blue_ring"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/image_defult_profile" />

            <LinearLayout
                android:id="@+id/lnr_event_count"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_180sdp"
                android:background="@drawable/rounded_rect_box"
                android:padding="@dimen/_3sdp">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/key" />
                <!--TODO set textview to 99+ if total event count is more then that-->
                <TextView
                    android:id="@+id/txt_event_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2 events"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/lnr_event_count"
                android:background="@color/black"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_fb"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/_17sdp"
                android:layout_marginRight="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_170sdp"
                android:background="@drawable/bg_primary_circle"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/fb" />

            <TextView
                android:id="@+id/txt_f2_badge"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_160sdp"
                android:background="@drawable/bg_blue_ring"
                android:gravity="center"
                android:text="15"
                android:textColor="@color/white"
                android:textSize="@dimen/_6sdp" />

            <ImageView
                android:id="@+id/img_capture"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_180sdp"
                android:background="@drawable/rounded_rect_box"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingTop="@dimen/_2sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_photo_camera" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/lnr_event_count"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/bg_profile_round"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_EE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/EventAndExib"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rclv_f3_trending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnr_event_count"
                android:layout_marginTop="@dimen/_10sdp"
                android:nestedScrollingEnabled="false">

            </android.support.v7.widget.RecyclerView>


            <TextView
                android:id="@+id/txt_dimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black70p"
                android:text="f \n  f"
                android:textColor="@color/transparent"
                android:textSize="@dimen/_300sdp"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/img_cross"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/cross_primary"
                android:visibility="gone" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_profile_pic2"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_115sdp"
                android:alpha="0"
                android:src="@drawable/image_defult_profile"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="@dimen/_3sdp" />

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_175sdp"
                android:background="@drawable/bg_primary_circle"
                android:src="@drawable/ic_icon_arrow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_175sdp"
                android:background="@drawable/bg_primary_circle"
                android:rotationY="180"
                android:src="@drawable/ic_icon_arrow"
                android:visibility="gone" />


        </RelativeLayout>
    </ScrollView>


</LinearLayout>