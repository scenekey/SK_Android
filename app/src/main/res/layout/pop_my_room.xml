<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pop_up_profile"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        style="@style/txt_event_green_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/background_f2_description"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/_60sdp"
        android:text="@string/myprofile"
        android:textSize="@dimen/_14sdp" />

    <ImageView
        android:id="@+id/img_p2_profile"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/bg_blue_ring2"
        android:padding="@dimen/_4sdp" />

    <TextView
        android:layout_width="@dimen/profilepic2"
        android:layout_height="@dimen/profilepic2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@drawable/circle_white"
        android:gravity="center"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_timer"
        android:layout_width="@dimen/profilepic2"
        android:layout_height="@dimen/profilepic2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@drawable/circle_white"
        android:gravity="center"
        android:text="15"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp" />

    <LinearLayout
        android:id="@+id/lnr_middle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:animateLayoutChanges="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/bg_blue_ring"
            android:padding="@dimen/_9sdp"
            android:src="@drawable/mail_sent" />

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/bg_black_circle"
            android:padding="@dimen/_9sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/right_arrow_shape" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_below="@+id/lnr_middle"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_pop_gray_image">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="@dimen/profilepic2_cW"
                android:layout_height="@dimen/profilepic1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_white" />

            <ImageView
                android:id="@+id/img_p2_profile2"
                android:layout_width="@dimen/profilepic"
                android:layout_height="@dimen/profilepic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bg_blue_ring2"
                android:padding="@dimen/_4sdp" />

            <TextView
                android:id="@+id/txt_view_pro"
                style="@style/popUpbottomtext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/img_profile"
                android:text="@string/View" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_pop_gray_image">

            <ImageView
                android:id="@+id/img_reply"
                android:layout_width="@dimen/profilepic2_cW"
                android:layout_height="@dimen/profilepic1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_white" />

            <ImageView
                android:id="@+id/img_reply_img"
                android:layout_width="@dimen/profilepic"
                android:layout_height="@dimen/profilepic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bg_blue_ring"
                android:padding="@dimen/_9sdp"
                android:src="@drawable/mail_sent" />

            <TextView
                android:id="@+id/txt_reply"
                style="@style/popUpbottomtext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/img_reply"
                android:text="@string/message" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nudge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_pop_gray_image">

            <ImageView
                android:id="@+id/img_nudge"
                android:layout_width="@dimen/profilepic2_cW"
                android:layout_height="@dimen/profilepic1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_white" />

            <ImageView
                android:layout_width="@dimen/profilepic"
                android:layout_height="@dimen/profilepic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bg_blue_ring"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/nudge" />

            <TextView
                android:id="@+id/txt_nudge"
                style="@style/popUpbottomtext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/img_nudge"
                android:text="@string/Nudge" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>